<%= form_for [@task, @step] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>

  <p>
    <%= f.label :summary %><br />
    <%= f.text_field :summary %>
  </p>

  <p>
    <%= f.label :description %> <br />
    <%= f.text_area :description %>
  </p>
  <%= f.submit %>
<% end %>