<p>
  <b>Title:</b>
  <%= @task.title %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>


<%= link_to 'Edit Task', edit_task_path(@task) %> |
<%= link_to 'Delete Task', task_path(@task), 
  :method => :delete, 
  :confirm => 'Are you sure?' %>

<ul id="steps">
  <% @task.steps.each do |step| %>
  <li>
    <%= step.number %>. <%= link_to step.summary, [@task, step] %>
  </li>
  <% end %>
</ul>
<%= link_to "New Step", new_task_step_path(@task) %>
<%= link_to 'Back', tasks_path %>
